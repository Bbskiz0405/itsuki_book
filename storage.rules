rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Images 資料夾的存取規則
    match /images/{imageId} {
      // 所有人都可以讀取圖片
      allow read: if true;

      // 只有認證用戶可以上傳
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024  // 限制 10MB
                   && request.resource.contentType.matches('image/.*');  // 只允許圖片
    }

    // 預設規則：拒絕所有其他存取
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
